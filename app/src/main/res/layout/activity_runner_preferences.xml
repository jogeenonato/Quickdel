<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".RunnerPreferences">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="Choose your Vehicle Type"
                android:textColor="@color/teal_700"></TextView>


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal">

                <RadioButton
                    android:id="@+id/v_bike_r"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Bike" />


                <RadioButton
                    android:id="@+id/v_sedan_r"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Sedan" />

                <RadioButton
                    android:id="@+id/v_ute_r"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Ute" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:text="Select the size package you can carry "
                android:textColor="@color/teal_700">

            </TextView>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal">

                <RadioButton
                    android:id="@+id/s_small_r"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Small" />

                <RadioButton
                    android:id="@+id/s_medium_r"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Medium" />

                <RadioButton
                    android:id="@+id/s_large_r"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Large" />
            </RadioGroup>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:text="Choose the Package Weight you can carry"
                android:textColor="@color/teal_700">

            </TextView>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal">

                <RadioButton
                    android:id="@+id/weigh1_r"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Less than 1KG" />

                <RadioButton
                    android:id="@+id/weight2_r"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Between 1.1 KG to 5 KG" />

                <RadioButton
                    android:id="@+id/weight3_r"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Between 5.1 KG to 10 KG" />

                <RadioButton
                    android:id="@+id/weight4_r"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="More than 10 KG" />
            </RadioGroup>

            <Button
                android:id="@+id/proceed_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:onClick="proceedButtonOnClick"
                android:padding="16dp"
                android:text="Proceed"></Button>

        </LinearLayout>

    </ScrollView>

</LinearLayout>